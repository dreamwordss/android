<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pop_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/light_transparent_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_all_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="90dip"
        android:background="#ebebeb"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/tv_title_bar_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="筛选"
                android:textColor="@color/black_19" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divercolor" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fadingEdge="none"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layout_pop_menu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/layout_location_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:minHeight="44dip"></RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_location_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/layout_type_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dip"
                    android:background="@color/white"
                    android:minHeight="44dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="商品分类"
                        android:textColor="@color/black_19"
                        android:textSize="14dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:text="筛选内容随便写啦"
                    android:textSize="30dp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>