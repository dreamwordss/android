<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lbl.codek3demo.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/listview_mvplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/actionbar_search_activity"
                layout="@layout/actionbar_search_activity" />

            <ListView
                android:id="@+id/listview_mvp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionbar_search_activity">

            </ListView>

            <TextView
                android:id="@+id/asdasdasda"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/red"
                android:gravity="center"
                android:text="滑动隐藏demo1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tianmaossss"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="天猫滑动隐藏demo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/recycle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="230dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="recycledemo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/demo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="220dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="测试demo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pulldemo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="70dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="puldemo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/camrea"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="180dp"
                android:layout_marginLeft="70dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="camera"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/truck_gang"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@color/red"
                android:gravity="center"
                android:text="路线规划"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/image_filter_15"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bl 高仿淘宝搜索 头部title 滑动隐藏"
                android:textColor="@color/black_19"
                android:textSize="20dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
